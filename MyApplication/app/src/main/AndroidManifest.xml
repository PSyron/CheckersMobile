<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.checkersmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CheckerApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.InvitationsActivity"
            android:label="@string/title_activity_invitations"
            android:screenOrientation="portrait" />
        <activity android:name=".gui.BaseAppBarActivity" />
        <activity
            android:name=".gui.GameTableActivity"
            android:label="@string/title_activity_game_table"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
