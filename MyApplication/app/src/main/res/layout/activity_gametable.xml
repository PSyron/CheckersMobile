<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="pl.checkersmobile.gui.GameTableActivity">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/activity_gametable_message"
            style="@style/ItemListText.Small.Bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <GridView
        android:id="@+id/activity_gametable_gv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:clickable="false"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:listSelector="@null"
        android:numColumns="12"
        android:stretchMode="columnWidth"/>

    <GridView
        android:id="@+id/activity_gametable_gvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:numColumns="8"
        android:stretchMode="columnWidth"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/activity_gametable_tvNick2"
            style="@style/ItemListText.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NickTwo:"/>

        <TextView
            android:id="@+id/activity_gametable_tvScore2"
            style="@style/ItemListText.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"/>

    </LinearLayout>

    <GridView
        android:id="@+id/activity_gametable_gv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="12"
        android:stretchMode="columnWidth"/>

</LinearLayout>
