<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.checkersmobile.gui.GameTableActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/linearLayout5">

        <TextView
            android:id="@+id/activity_gametable_tvNick1"
            style="@style/ItemListText.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NickOne:"/>

        <TextView
            android:id="@+id/activity_gametable_tvScore1"
            style="@style/ItemListText.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"/>

    </LinearLayout>

    <GridView
        android:id="@+id/activity_gametable_gv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:listSelector="@null"
        android:numColumns="12"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:clickable="false"
        android:layout_margin="0dp"/>

    <GridView
        android:id="@+id/activity_gametable_gvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="8"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/activity_gametable_tvNick2"
            style="@style/ItemListText.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NickTwo:"/>

        <TextView
            android:id="@+id/activity_gametable_tvScore2"
            style="@style/ItemListText.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"/>

    </LinearLayout>

    <GridView
        android:id="@+id/activity_gametable_gv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:numColumns="12"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_margin="4dp"/>

</LinearLayout>
